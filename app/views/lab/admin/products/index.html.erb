<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<%# #app/views/issues/index.html.erb %>
<% breadcrumb :products %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= image_tag(product.url, :alt => product.name, width:'100') %></td>
        <td><%= product.quantity %></td>
        <td><%= product.amount %></td>
        <td><%= product.category.id %></td>
        <td><%= link_to 'Show', lab_admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_lab_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', lab_admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @products %>

