<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= image_tag(product.url, :alt => product.name, width:'100') %></td>
        <td><%= product.amount %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', customer_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
