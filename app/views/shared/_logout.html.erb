<% unless current_user.nil? %>
  <ul id="dropdown1" class="dropdown-content">
    <li>
      <a href="<%= destroy_user_session_path %>" data-method="delete">Sign out</a>
    </li>
  </ul>
  <nav>
    <div class="nav-wrapper navbar-color">
      <a href="#" class="brand-logo left">
        <%= image_tag("logored.png", :alt => "logo") %>
      </a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <% if current_user.customer? %>
          <li>
            <a href="<%= customer_home_index_path %>">Home</a>
          </li>
          <li>
            <a href="<%= customer_products_path %>">Products</a>
          </li>
          <% elsif current_user.admin? %>
            <li>
              <a href="<%= admin_home_index_path %>">Home</a>
            </li>
            <li>
              <a href="<%= admin_categories_path %>">Categories</a>
            </li>
            <li>
              <a href="<%= admin_products_path %>">Products</a>
            </li>
            <% end%>
      </ul>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>
          <a class="dropdown-button" href="#" data-activates="dropdown1">
            <%=current_user.email %>
              <i class="material-icons right">arrow_drop_down</i>
          </a>
        </li>
      </ul>
      <a href="#" data-activates="slide-out" class="button-collapse show-on-medium"><i class="material-icons">menu</i></a>
    </div>
  </nav>

  <ul id="slide-out" class="side-nav">
    <% if current_user.customer? %>
      <li>
        <a href="<%= customer_home_index_path %>">Home</a>
      </li>
      <li>
        <a href="<%= customer_products_path %>">Products</a>
      </li>
    <% elsif current_user.admin? %>
      <li>
        <a href="<%= admin_home_index_path %>">Home</a>
      </li>
      <li>
        <a href="<%= admin_categories_path %>">Categories</a>
      </li>
      <li>
        <a href="<%= admin_products_path %>">Products</a>
      </li>
    <% end%>
  </ul>
<% end %>